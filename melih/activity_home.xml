<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FB"
    tools:context=".HomeActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="20dp"
        android:paddingBottom="96dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hoş geldin -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Hoş geldin"
                android:textColor="#555789"
                android:textSize="22sp" />

            <!-- Fakülte -->
            <TextView
                android:id="@+id/tvFacultyLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fakülte seçin"
                android:textColor="#555789"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFaculty"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E6E6EC"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <TextView
                        android:id="@+id/tvFacultyValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Seçiniz"
                        android:textColor="#98A1BC"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_arrow_down_24"
                        app:tint="#98A1BC"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bölüm -->
            <TextView
                android:id="@+id/tvDepartmentLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bölüm seçin"
                android:textColor="#555789"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDepartment"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E6E6EC"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <TextView
                        android:id="@+id/tvDepartmentValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Seçiniz"
                        android:textColor="#98A1BC"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_arrow_down_24"
                        app:tint="#98A1BC"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ders -->
            <TextView
                android:id="@+id/tvLessonLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ders seçin"
                android:textColor="#555789"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLesson"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E6E6EC"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <TextView
                        android:id="@+id/tvLessonValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Seçiniz"
                        android:textColor="#98A1BC"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_arrow_down_24"
                        app:tint="#98A1BC"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Vize / Final -->
            <TextView
                android:id="@+id/tvExamTypeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vize / Final"
                android:textColor="#555789"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardExamType"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E6E6EC"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <TextView
                        android:id="@+id/tvExamTypeValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Seçiniz"
                        android:textColor="#98A1BC"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_arrow_down_24"
                        app:tint="#98A1BC"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Getir -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGetir"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#C9C6FF"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvGetir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Getir"
                        android:textSize="16sp"
                        android:textColor="#555789"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ALT MENÜ -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="415dp"
        android:layout_height="91dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconSize="22dp"
        app:itemIconTint="@color/nav_tint_single"
        app:itemTextColor="@color/nav_tint_single"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>
