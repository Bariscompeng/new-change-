<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FB"
    tools:context=".FeedbackActivity2">

    <!-- Üst bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F9F9FB"
        android:elevation="0dp"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:navigationIconTint="#555879"
        app:title="Geri Bildirim Gönder"
        app:titleCentered="true"
        app:titleTextColor="#555879"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- İçerik -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Açıklama -->
            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Geri bildirimleriniz bizim için çok değerli. Lütfen aşağıdaki formu doldurarak düşüncelerinizi bizimle paylaşın."
                android:textColor="#555879"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Konu başlığı -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konu"
                android:textColor="#555879"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <!-- Konu seçimi (pill görünüm) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSubject"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#1A000000"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvSubject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Konu seçin"
                        android:textColor="#555879"
                        android:textSize="15sp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_down_24"
                        app:tint="#555879"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Geri bildirim başlığı -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geri bildiriminiz"
                android:textColor="#555879"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <!-- Geri bildirim metin alanı (büyük, yuvarlak) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#1A000000"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/etFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Geri bildirimi buraya yazın."
                    android:textColor="#555879"
                    android:textColorHint="#555879"
                    android:gravity="center"
                    android:padding="16dp"
                    android:inputType="textMultiLine"
                    android:maxLines="6"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Gönder butonu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSend"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Gönder"
                android:textAllCaps="false"
                android:textColor="#555789"
                android:textSize="16sp"
                app:backgroundTint="#A6A1FF"
                app:cornerRadius="28dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Alt menü (uygulamadakiyle aynı) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconSize="22dp"
        app:itemIconTint="@color/nav_tint_single"
        app:itemTextColor="@color/nav_tint_single"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
