<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FB">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBarEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F9F9FB"
        android:elevation="0dp"
        app:title="Profilimi Düzenle"
        app:titleCentered="true"
        app:titleTextColor="#555879"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:navigationIconTint="#555879"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBarEdit">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="0dp"
            app:strokeColor="#E6E8F2"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="#FFFFFFFF">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/avatarImageEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true" />

                <ImageView
                    android:id="@+id/btnEditAvatarEdit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_circle_white"
                    android:padding="6dp"
                    app:srcCompat="@drawable/ic_edit_24"
                    app:tint="#555879"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- KULLANICI ADI -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Adı"
            android:textColor="#555879"
            android:textSize="14sp"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/etNameEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#555879"
            android:textSize="16sp"
            android:gravity="center"
            android:backgroundTint="#C9C6FF"
            android:layout_marginTop="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveEdit"
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:layout_marginTop="32dp"
            android:text="Kaydet"
            android:textAllCaps="false"
            android:textColor="#555879"
            app:cornerRadius="14dp"
            app:backgroundTint="#C9C6FF"/>



        <TextView
            android:id="@+id/tvCurrentPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mevcut Şifre"
            android:textColor="#555879"
            android:textSize="14sp"
            android:layout_marginTop="24dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCurrentPasswordEdit"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#C9C6FF"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="password_toggle"
            app:endIconTint="#6A6794">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCurrentPasswordEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:inputType="textPassword"
                android:textColor="#555879"
                android:textColorHint="#9AA0A6"
                android:hint="Mevcut şifre"/>
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
