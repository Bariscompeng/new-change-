<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FB">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F9F9FB"
        android:elevation="0dp"
        app:title="Geri Bildirim Detayı"
        app:titleCentered="true"
        app:titleTextColor="#555879"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:navigationIconTint="#555879"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/actionsRow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- E-posta -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeColor="#B8B5FF"
                app:strokeWidth="1dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/bg_fill_10">

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:foregroundGravity="center">

                        <ImageView
                            android:id="@+id/ivAvatar"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_person_24"
                            app:tint="#555879"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="kisi@mail.com"
                        android:textColor="#555879"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Konu -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeColor="#B8B5FF"
                app:strokeWidth="1dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_fill_10"
                    android:padding="12dp">

                    <!-- Başlık -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="6dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:foregroundGravity="center">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_label_24"
                                app:tint="#555879"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Konu"
                            android:textColor="#555879"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <!-- İçerik -->
                    <TextView
                        android:id="@+id/tvSubject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="14dp"
                        android:background="@drawable/bg_textarea"
                        android:text="Uygulama Arayüzü"
                        android:textColor="#555879"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Geri Bildirim -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeColor="#B8B5FF"
                app:strokeWidth="1dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_fill_10"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="6dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:foregroundGravity="center">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_message_24"
                                app:tint="#555879"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Geri Bildirim"
                            android:textColor="#555879"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="14dp"
                        android:background="@drawable/bg_textarea"
                        android:text="Anasayfadaki kartlar çok küçük."
                        android:textColor="#555879"
                        android:textSize="16sp"
                        android:lineSpacingExtra="3dp"
                        android:gravity="center"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/actionsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
